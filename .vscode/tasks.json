{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile:dev:watch",
      "label": "Compile",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "buildWatchers",
        "close": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "closedDocuments",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "Error: ([^(]+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): (.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "beginsPattern": "",
          "endsPattern": ""
        }
      }
    },
    {
      "type": "npm",
      "script": "build:dev:watch",
      "label": "Build",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "buildWatchers",
        "close": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "closedDocuments",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "Error: ([^(]+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): (.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "beginsPattern": "Building for",
          "endsPattern": "Built to"
        }
      }
    },
    {
      "label": "Compile & Build",
      "dependsOn": ["Compile", "Build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
